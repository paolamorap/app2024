<link rel="stylesheet" href="/css/estilos_register.css">


<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-300 rounded-lg shadow-lg text-gray-800">

  <h1 class="text-4xl font-bold text-center mb-6" style="color: #2193b0;"> Register</h1>

  <form action="/register" method="POST" class="mt-4">
      
      <input type="text" name="name" placeholder="Name"
      class="border border-gray-300 w-full text-lg placeholder-gray-500 p-2 my-2 rounded-md
      focus:outline-none focus:ring-2 focus:ring-blue-300" required>
      
      <input type="email" name="email" placeholder="Email"
      class="border border-gray-300 w-full text-lg placeholder-gray-500 p-2 my-2 rounded-md
      focus:outline-none focus:ring-2 focus:ring-blue-300" required>

      <input type="text" name="username" placeholder="Nombre de Usuario"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
        focus:bg-white" required>
      
      <select name="role" class="border border-gray-300 w-full text-lg placeholder-gray-500 p-2 my-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-300" required>
        <option value="">Selecciona un rol</option>
        <option value="admin">Administrador</option>
        <option value="operator">Operador</option>
      </select>

      
      <input type="password" name="password" placeholder="Password"
      class="border border-gray-300 w-full text-lg placeholder-gray-500 p-2 my-2 rounded-md
      focus:outline-none focus:ring-2 focus:ring-blue-300" required>

      <button type="submit" class="rounded-md bg-gradient-to-r from-blue-500 to-turquoise-500 w-full text-lg text-white
      font-semibold p-2 my-3 hover:from-blue-600 hover:to-turquoise-600 focus:outline-none focus:ring-2 focus:ring-blue-300 shadow-md transition duration-300 ease-in-out transform hover:-translate-y-1">Send</button>

      {{#if error}}
          <p class="text-red-500 font-bold text-lg my-3">* {{error}}</p>
      {{/if}}
  </form>

</div>


