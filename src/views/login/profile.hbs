<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Perfil de Usuario - Epolaris Network</title>
  <link rel="icon" href="/image/icon.ico" type="image/x-icon">
  <link rel="stylesheet" href="/css/estilos_main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.1/tailwind.min.css">
  <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">
  <style>
    .custom-button {
        background: linear-gradient(145deg, #009fdf, #006fad);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 15px;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
        transition: all 0.2s ease;
    }

    .custom-button:hover {
        background: linear-gradient(145deg, #007dce, #004e8e);
        box-shadow: 2px 4px 6px rgba(0,0,0,0.3);
    }

</style>
</head>
<body class="bg-gray-200">
  <nav class="flex items-center py-4 nav-color text-white shadow-md">
    <!-- Navegación aquí -->
  </nav>

  <div class="container mx-auto px-4">
    
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">

      

      <h1 class="block text-gray-700 text-xl font-bold mb-2">Perfil de Usuario</h1>

      <div id="userInfo" class="mb-4">
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2">
            Nombre Completo
          </label>
          <input type="text" value="{{name}}" disabled class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>

        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2">
            Email
          </label>
          <input type="email" value="{{email}}" disabled class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
      </div>

      <!-- Botón para cambiar la contraseña -->
      <div class="text-right button-row"> <!-- Usa la clase button-row para aplicar el estilo -->
        <button onclick="toggleChangePassword()" class="custom-button">
          Cambiar Contraseña
        </button>
      </div>

      <!-- Formulario para cambiar la contraseña (inicialmente oculto) -->
      <div id="changePasswordForm" style="display:none;">
        <form action="/updatePassword" method="POST">
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="currentPassword">
              Contraseña Actual
            </label>
            <input type="password" id="currentPassword" name="currentPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="newPassword">
              Nueva Contraseña
            </label>
            <input type="password" id="newPassword" name="newPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="confirmNewPassword">
              Confirmar Nueva Contraseña
            </label>
            <input type="password" id="confirmNewPassword" name="confirmNewPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
          </div>
          <button type="submit" class="custom-button">
            Actualizar Contraseña
          </button>
        </form>
      </div>

      {{#if error}}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Error:</strong>
          <span class="block sm:inline">{{error}}</span>
        </div>
      {{/if}}

      {{#if message}}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Éxito:</strong>
          <span class="block sm:inline">{{message}}</span>
        </div>
      {{/if}}

    </div>
  

  </div>

  <script>
    function toggleChangePassword() {
      var form = document.getElementById("changePasswordForm");
      var userInfo = document.getElementById("userInfo");
      if (form.style.display === "none") {
        form.style.display = "block";
        userInfo.style.display = "none";  // Oculta la información del usuario
      } else {
        form.style.display = "none";
        userInfo.style.display = "block";  // Muestra la información del usuario
      }
    }
  </script>
</body>
</html>

