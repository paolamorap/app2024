<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/estilos_datos.css">
    <title>ACCESS LIST</title>
</head>
<body>
    <div class="container">
        <h1 class="titulo">Configuracion de Access-List</h1>
        

        <form id="accesslist-form" class="form">
            
            <label for="ip">Direcciones IP</label>
            <input type="text" id="ip" name="ip" placeholder="Ejemplo: 192.168.1.1, 192.168.1.2, ... " required>
            
            <label for="marca">Modelo del dispositivo</label>
            <select id="marca" name="marca" required class="form-control" onchange="mostrarCampoAccess(this.value)">
                <option value="">Seleccione...</option>
                <option value="HPA5120">HP A5120</option>
                <option value="HPV1910">HP V1910</option>
                <option value="3COM">3COM BASELINE</option>
                <option value="TPLINK">TP-LINK</option>
                <option value="CISCO">CISCO</option>
            </select>

            <div id="campoRule" style="display: none;">
                <label for="n_regla">Numero de regla</label>
            <input type="number" id="n_regla" name="n_regla" placeholder="Ejemplo: 0">
            </div>

            <label for="id_list">Numero de lista</label>
            <input type="number" id="id_list" name="id_list" placeholder="Ejemplo: 10" required>

            <label for="ip_red">Direccion IP de la red para la lista</label>
            <input type="text" id="ip_red" name="ip_red" placeholder="Ejemplo: 192.168.1.0 " required>

            <label for="mascara_wildcard">Mascara Wildcard</label>
            <input type="text" id="mascara_wildcard" name="mascara_wildcard" placeholder="Ejemplo: 0.0.0.255 " required>
            
            <label for="user">Usuario</label>
            <input type="text" id="user" name="user" placeholder="Usuario" required>
            
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" placeholder="Contraseña" required>
            
            <button type="submit" class="btn">Configurar</button>

            
        </form>
        <!-- Mensaje de respuesta -->
        <div id="message-container" class="message-container"></div>
        
    </div>
    <script>
        function mostrarCampoAccess(marcaSeleccionada) {
            var campoRule = document.getElementById('campoRule');

            if (['HPA5120','HPV1910','3COM','TPLINK'].includes(marcaSeleccionada)) {
                campoRule.style.display = 'block';
            } 
            else {
                campoRule.style.display = 'none';
            }
        }
    </script>
    <script src="/js/formularios.js"></script>
</body>
</html>